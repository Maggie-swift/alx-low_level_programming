include "shell.h"

/**
 *glne - Gets line from user input
 *Return: lpt to buffer user input
 */

char *glne(void)
{
	int tmp;
	char *lpt = NULL;
	size_t n = 0;

	tmp = getline(&lpt, &n, stdin);
	if (tmp == EOF)
	{
		if (isatty(STDIN_FILENO))
		{
			write(1, "\n", 1);
		}
		exit(0);
	}
	return (lpt);
}
